<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacmground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/WhiteTextAndTransparentBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#04ffffff"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/txt_total_taps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:text="การแตะทั้งหมด: ในทุกโหมด"
                        android:textColor="#efff"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/total_taps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#efff"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->

                    <!--<Button-->
                    <!--android:id="@+id/btn_t_exchange"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:text="@string/txt_btn_exchange_t" />-->

                    <!--<Button-->
                    <!--android:id="@+id/btn_p_exchange"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:text="@string/txt_btn_exchange_p" />-->
                    <!--</LinearLayout>-->
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#04ffffff"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/txt_high_score_normal_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="40dp"
                        android:text="คะแนนสูงสุดในโหมด: เมตตา"
                        android:textColor="#efff"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/score_normal_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#efff"
                        android:textSize="45dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/level_normal_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:text=""
                        android:textColor="#efff"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_high_score_non_stop_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="คะแนนสูงสุดในโหมด: ไร้ปราณี"
                        android:textColor="#efff"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/score_non_stop_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#efff"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/level_non_stop_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#efff"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <ListView
                    android:id="@+id/list_top10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"></ListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>