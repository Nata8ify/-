<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sleeplesstofu.quartierlatin.trag.trag.extra.CreditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_sleepless_tofu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/sleepless_tofu" />

            <TextView
                style="@style/model_b_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ผู้พัฒนา: SleeplessTofu Developer"
                android:id="@+id/txt_credit_developer"/>

            <TextView
                style="@style/model_b_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special: RaiNgan.tff โดย partykasidit"
                android:textSize="25dp"
                android:id="@+id/txt_credit_special"/>

            <TextView
                style="@style/model_b_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ติดต่อ: nata8ify@gmail.com"
                android:id="@+id/txt_credit_contract"/>

            <TextView
                style="@style/model_b_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="พัฒนาครั้งสุดท้าย: 13 March 2016"
                android:id="@+id/txt_credit_last_modified"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="กลับ"
                android:onClick="doFinishCredit"
                android:id="@+id/btn_goBack"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
